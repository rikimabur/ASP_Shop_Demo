@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section view_title_ad
{
    Chi Tiết Đơn Hàng
}
@using Demo_Web_Mvc.Models;
@model List<DONHANGCHITIET>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Sản Phẩm</th>
                                <th>Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng Tiền</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DONHANGCHITIET dh in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@dh.SANPHAM.TENSP</td>
                                    <td>@string.Format("{0:N0},000 đ",dh.Gia)</td>
                                    <td>@dh.SoLuong</td>
                                    <td>@string.Format("{0:N0},000 đ", dh.TongTien)</td>        
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
