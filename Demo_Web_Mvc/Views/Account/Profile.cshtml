</div>
<script type="text/javascript">
    $(".account_hienthi").addClass('hidden');
    var check = true;
    $("#thongtin_tk").on('click', function () {
        if (check == true)
        {
            $(".account_hienthi").removeClass('hidden');
            $(".account_hienthi").slideDown("slow");
            check = false;
        }
        else
        {
            $(".account_hienthi").slideUp("slow");
            check = true;
        }
    });
    
</script>