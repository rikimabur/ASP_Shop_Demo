@using Demo_Web_Mvc.Helpers;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <link href="~/assets/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/public/hieuung.css" rel="stylesheet" />
    <link href="~/public/scroll_layout.css" rel="stylesheet" />
    <style>
        a:link{text-decoration:none;}
    </style>
    <script src="~/assets/jquery-2.2.1.min.js"></script>
    <script src="~/assets/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
    <link href="~/assets/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/assets/jquery-ui.min.js"></script>
    <script src="~/public/scroll_layout.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#loginLink").on('click', function () {
                $("#form_logout").submit();
            });
        });
    </script>
    <script src="~/public/Search.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('ul.nav li.dropdown').hover(function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(200);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(200);
            });
        });
    </script>
    <link href="~/public/footer.css" rel="stylesheet" />
    <script src="~/public/myscript.js"></script>
    <title>@ViewBag.Title</title>
    @RenderSection("css",false)
</head>
<body>
    <div class="row">
        <nav class="navbar navbar-default navbar-collapse @*navbar-fixed-top*@" style="background-color:yellow; color:black; font-weight:500;">
            <div class="container">
                <div class="navbar-header" style="background-color:#69d8af">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Home")" style="margin-left:10px; color:yellow;">Phước Con</a>
                    @*tìm kiếm*@
                    <form class="navbar-form navbar-left " role="search" action="@Url.Action("Search", "SanPham")" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtkeyword" name="txtkeyword" placeholder="Bạn tìm gì..." autocomplete="off">
                        </div>
                        <button type="submit" class="btn btn-default">Tìm</button>
                    </form>
                </div>
                <div class="@*collapse navbar-collapse*@" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav">
                        <li class=""><a href="@Url.Action("ShowAll", "SanPham", new { id = 1 })">Điện thoại</a></li>
                        <li><a href="@Url.Action("ShowAll", "SanPham", new { id = 2 })">Tablet</a></li>
                        @*<li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="javascipt:;">Nhà Sản Xuất<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li> @Html.Action("PartialNhaSanXuat", "NhaSanXuat")</li>
                            </ul>
                        </li>*@
                        <li><a href="javascript:;">Khuyến Mãi</a></li>
                        <li><a href="javascript:;">Tin Tức</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">

                        <form id="form_logout" method="post" action="@Url.Action("LogOut", "Account")"></form>
                        @if (Demo_Web_Mvc.Helpers.CurrentContext.IsLogged() == false)
                        {
                            <li><a href="@Url.Action("Register","Account")" class="chunhay">Đăng Ký</a></li>
                            <li><a href="@Url.Action("Login","Account") " style=" color: green">Đăng Nhập</a></li>
                        }
                        else
                        {
                            Demo_Web_Mvc.Models.TAIKHOAN CurUser = Session["CurUser"] as Demo_Web_Mvc.Models.TAIKHOAN;
                            if (CurUser.MaTK == 15)
                            {
                                <li><a href="~//Admin/HomeAD/Index/">Trang Quản Lý</a></li>
                            }
                            <li><a href="@Url.Action("Index","Cart")" id="load_cart" class="load_cart">Giỏ Hàng <span class="badge" id="giohang">@CurrentContext.Cart().GetTotal()</span></a></li>
                            <li><a href="@Url.Action("Profile","Account")">@CurrentContext.CurUser().TenDangNhap</a></li>
                            <li><a id="loginLink" href="javascript: ;">Thoát</a></li> 
                        }
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
   
    <div class="container">
        @RenderPage("~/Views/Shared/slide_show.cshtml")
        <div class="row">
           @RenderPage("~/Views/Shared/menu.cshtml")
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading" style="margin-bottom:20px;">
                        <h3 class="panel-title">
                            @RenderSection("view_title", true)
                        </h3>
                    </div>
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        @RenderPage("~/Views/Shared/footer.cshtml")
    </div>
    
   @RenderSection("js", false)
    <a href="javascript:;" class="scrollToTop">
        <img src="~/hinhanh/Layout/scroll_top.png" style="width:40px;height:40px;" />
    </a>
</body>
</html>




